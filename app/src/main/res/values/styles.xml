<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppButtonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="AppButtonOutlineTextAppearance" parent="AppButtonTextAppearance">
        <item name="android:textColor">@color/colorRedDB</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="minHeight">@dimen/_64sdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="boxBackgroundColor">@color/colorTransparent</item>
        <item name="helperTextTextAppearance">@style/HelperText</item>
        <item name="fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="EditTextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textColorHint">@color/blackWhite30</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:padding">0dp</item>
        <item name="fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/warm_pink</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="HelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="styleBottomBarSelectedText" parent="TextAppearance.Design.Tab">
        <item name="android:colorPrimary">@color/colorRedDB</item>
        <item name="android:textColor">@color/colorRedDB</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="textAllCaps">false</item>
        <item name="itemIconTint">@color/colorRedDB</item>
    </style>

    <style name="styleBottomBarText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>"
        <item name="textAllCaps">false</item>
        <item name="itemIconTint">@color/dark_gray</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorRedDB</item>
        <item name="tickColorActive">@color/colorRedDB</item>
        <item name="tickColorInactive">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/colorRedDB</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
    </style>

</resources>
