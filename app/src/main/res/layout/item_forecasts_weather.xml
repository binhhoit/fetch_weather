<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_selectable_state"
    android:layout_marginVertical="@dimen/_5sdp"
    android:paddingVertical="@dimen/_10hsdp">

    <TextView
        android:id="@+id/tv_time_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_neue_regular"
        android:gravity="start"
        android:text="date"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_cloud"
        android:layout_width="@dimen/_25.5sdp"
        android:layout_height="@dimen/_25.5sdp"
        android:src="@drawable/ic_weather_logo"
        android:layout_marginStart="@dimen/_90sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_neue_regular"
        android:gravity="start"
        android:text="15 Â°C"
        android:layout_marginStart="@dimen/_15sdp"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toEndOf="@id/iv_cloud"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_neue_regular"
        android:gravity="start"
        android:text="10 %"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_13ssp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@id/tv_temperature"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_wind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_neue_regular"
        android:gravity="start"
        android:text="39m/s N"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>

